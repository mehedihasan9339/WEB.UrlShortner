@using Microsoft.AspNetCore.Identity
@using WEB.UrlShortner.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div>
    @if (SignInManager.IsSignedIn(User))
    {
        <form id="logoutForm" asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
            <button type="submit" class="btn btn-link text-decoration-none">Logout (@User.Identity.Name)</button>
        </form>
    }
    else
    {
        <a class="btn btn-link text-decoration-none" asp-action="Login" asp-controller="Account">Login</a>
        <a class="btn btn-link text-decoration-none" asp-action="Register" asp-controller="Account">Register</a>
    }
</div>
